<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        android:minHeight="92dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="7dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/item_challenge_distance_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:textSize="12sp"
                android:textColor="#828282"
                android:text="дистанция"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_challenge_award_image"/>

        <TextView
                android:id="@+id/item_challenge_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#828282"
                tools:text="5 км"
                app:layout_constraintTop_toBottomOf="@+id/item_challenge_distance_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_challenge_award_image"/>

        <TextView
                android:id="@+id/item_challenge_time_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:textSize="12sp"
                android:textColor="#828282"
                android:text="время"
                app:layout_constraintTop_toBottomOf="@+id/item_challenge_distance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_challenge_award_image"/>

        <TextView
                android:id="@+id/item_challenge_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="6dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#828282"
                tools:text="00:30"
                app:layout_constraintTop_toBottomOf="@+id/item_challenge_time_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/item_challenge_award_image"/>

        <ImageView
                android:id="@+id/item_challenge_award_image"
                android:layout_width="84dp"
                android:layout_height="77dp"
                android:layout_marginEnd="33dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="11dp"
                android:padding="20dp"
                android:background="@drawable/ic_suit_background"
                tools:src="@drawable/bad_cat_jacket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
                android:id="@+id/item_challenge_complete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_check_orange_60dp"
                app:layout_constraintEnd_toEndOf="@+id/item_challenge_award_image"
                app:layout_constraintBottom_toBottomOf="@+id/item_challenge_award_image"
                app:layout_constraintStart_toStartOf="@+id/item_challenge_award_image"
                app:layout_constraintTop_toTopOf="@+id/textView"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#828282"
                android:textStyle="bold"
                android:text="@string/get_award"
                app:layout_constraintTop_toTopOf="@+id/item_challenge_award_image"
                app:layout_constraintStart_toStartOf="@+id/item_challenge_award_image"
                app:layout_constraintEnd_toEndOf="@+id/item_challenge_award_image" android:id="@+id/textView"/>

    </android.support.constraint.ConstraintLayout>
</android.support.design.card.MaterialCardView>