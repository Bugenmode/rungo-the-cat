<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <View android:layout_width="match_parent"
          android:layout_height="41dp"
          android:layout_gravity="bottom"
          android:background="#E5E5E5"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@null">

        <ImageView
                android:id="@+id/nav_home"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_home_false"/>

        <ImageView
                android:id="@+id/nav_customize"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_customize_false"/>

        <ImageView
                android:id="@+id/nav_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_play"/>

        <ImageView
                android:id="@+id/nav_challenge"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_challenge_false"/>

        <ImageView
                android:id="@+id/nav_profile"
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:scaleType="center"
                app:srcCompat="@drawable/ic_profile_false"/>

    </LinearLayout>
</merge>